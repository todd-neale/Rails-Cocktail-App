
<div class="banner">
<div class="container text-center">
  <h1>Cocktails</h1>
  <%= link_to("Add new", new_cocktail_path, class:"btn btn-warning mt-3") %>
</div>
</div>

<div class="container pt-5">
<div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-md-4 pb-4">
      <div class="card-category">
        <%= link_to(cocktail.name, cocktail, class:"text-white text-decoration-none") %>
        <!-- <%= link_to 'Delete', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure you want to delete?'}, class: 'btn btn-flat' %> -->
      </div>
    </div>
  <% end %>
</div>
</div>